<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <View
        android:id="@+id/toolbar_view"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <TextView
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/toolbar_view"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/home_txt"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/toolbar_view"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_view"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/bg_box_view"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/score_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        tools:text="3/5"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/score_txt"
        app:layout_constraintLeft_toLeftOf="@id/score_txt"
        app:layout_constraintRight_toRightOf="@id/score_txt"
        android:text="@string/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/bg_box_view"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/answer_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        tools:text="15/130"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/answer_txt"
        app:layout_constraintLeft_toLeftOf="@id/answer_txt"
        app:layout_constraintRight_toRightOf="@id/answer_txt"
        android:text="@string/answer_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>